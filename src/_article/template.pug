extends ../_component/layout/base
block config
    -
        var title = template.head.title || 'change title'
        var description = template.head.description || 'change description'
block content
    .content
        each something in template.body
            if something.type == "h2"
                h2=something.data
            if something.type == "p"
                each paragraph in something.data
                    p=paragraph
